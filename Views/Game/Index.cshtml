@model SudokuApp.Models.SudokuBoard

<style>
    /* Önceki CSS aynı kalacak */

    input.editable {
        background-color: white;
        border: 1px solid #999;
        font-weight: bold;
        color: black;
    }
</style>

<h2 style="text-align:center">Sudoku</h2>

<table>
    @for (int row = 0; row < 9; row++)
    {
        <tr>
            @for (int col = 0; col < 9; col++)
            {
                var value = Model.Grid[row, col];
                var rightClass = (col + 1) % 3 == 0 && col != 8 ? "block-right" : "";
                var bottomClass = (row + 1) % 3 == 0 && row != 8 ? "block-bottom" : "";
                bool isEditable = value == 0;
                <td class="@rightClass @bottomClass">
                    <input type="text"
                           value="@(isEditable ? "" : value.ToString())"
                           @(isEditable ? "" : "readonly")
                           maxlength="1"
                           class="@(isEditable ? "editable" : "")" />
                </td>
            }
        </tr>
    }
</table>
